
{% extends 'base_authen.html.twig' %}
{% block body %}

  <div class="authentication">
    <div class="container" >
        <div class="row justify-content-md-center">
            <div class="col-xl-5 col-lg-6 col-md-6 col-sm-12">
                <div class="login-screen">
                    <div class="login-box">     
                        <h3 style="text-align:center;color:#225de4">Inscription</h3>
                        <hr>
                        {{ form_start(form) }}
                    
                        <div class="form-group text_box">  
                          {{ form_row(form.email, {'label':'Adresse Email','attr':{'placeholder':"Entrez votre email..."}}) }}
                        </div>
                        <div class="form-group text_box">
                         {{ form_row(form.username, {'label':'Nom d\'utilisateur','attr':{'placeholder':"Entrez votre nom d\'utilisateur..."}}) }}
                        </div>
                        <div class="form-group text_box">
                         {{ form_row(form.password, {'label':'Mot de passe','attr':{'placeholder':"Saisir un mot de passe..."}}) }}
                        </div>
                        <div class="form-group text_box">
                         {{ form_row(form.confirm_password, {'label':'Confirmation du mot de passe','attr':{'placeholder':"Répétez votre mot de passe..."}}) }}
                        </div>
                        <div class="actions mb-4">
                            <button type="submit" class="btn btn-primary">S'inscrire</button>
                        </div>
                        <hr>
                        <div class="actions mb-4">
                            <span class="additional-link">Vous avez un compte ? <a href="{{ path('security_login') }}" class="btn btn-dark">Se connecter</a></span>
                        </div>
                        <hr>
                        <div class="actions mb-4">
                            <span class="additional-link">En vous inscrivant, vous acceptez <a href="#" style="text-decoration: underline;">la politique de confidentialité</a> et <a href="#" style="text-decoration: underline;">les conditions d'utilisation</a>.</span>
                        </div>
                    {{ form_end(form) }}   
                    </div>
                </div>    
            </div>    
        </div>
    </div>
  </div>

{% endblock %}










